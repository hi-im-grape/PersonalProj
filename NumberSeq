import java.util.Scanner;

public class NumberSeq {

	public static void main(String[] args) {
		
			Scanner scanner = new Scanner(System.in);
			System.out.print("Please enter a number or Q to quit: ");
			//initial prompt
		
			double input1 = scanner.nextDouble();
			//stores input as input1
		
			System.out.print("Please enter a second, bigger number: ");

			double input2 = scanner.nextDouble();
			//stores input as input2
			
			while (true) {	

				double sum = input1 + input2;
				
				System.out.println(sum);
				//prints input1+input2

				
		
				System.out.print("Enter another number: ");
				//asks for next number
				double input3 = scanner.nextDouble();
		
				System.out.print(input1 + sum);
				//prints 2+31
				
			} if (input1 >= input2) {
				System.out.print("Well fine, bye.");
			}
		}	

	}



/*
take user input
store input as double
store double and ask for 2nd input
add together input1 + input2
store sum1
print sum1
ask for input3
store input3
add input 3 to sum1
continue until q to quit

*/
